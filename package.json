{
    "name": "edna-moda",
    "version": "3.0.0",
    "main": "node build",
    "scripts": {
        "start": "node app",
        "build": "node build",
        "test": "mocha && jest",
        "clean": "prettier --write \"*.{js,md}\" \"**/**/*.js\"",
        "lint": "eslint . --config .eslintrc.json --cache --ext .js",
        "lint-fix": "eslint . --config .eslintrc.json --ext .js --fix"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint"
        }
    },
    "mocha": {
        "diff": true,
        "extension": [
            "js"
        ],
        "reporter": "spec",
        "slow": 75,
        "timeout": 2000
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "coverage",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/plugins/utils/events/"
        ]
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "useTabs": true,
        "trailingComma": "all",
        "printWidth": 120,
        "proseWrap": "always",
        "arrowParens": "avoid",
        "tabWidth": 4,
        "endOfLine": "auto",
        "bracketSpacing": false
    },
    "author": {
        "name": "Aldair Beltran",
        "email": "aldairbeltran3@hotmail.com",
        "url": "https://github.com/villager"
    },
    "dependencies": {
        "discord.js": "^12.2.0",
        "ps-data": "git://github.com/spaceshowdown/ps-data.git",
        "request": "^2.88.2",
        "sockjs-client": "^1.1.4",
        "ytdl-core": "^2.1.7"
    },
    "optionalDependencies": {
        "githubhook": "^1.9.3",
        "node-static": "^0.7.11"
    },
    "devDependencies": {
        "eslint": "^7.1.0",
        "husky": "^4.2.3",
        "jest": "^26.0.1",
        "mocha": "^7.1.1",
        "prettier": "2.0.5",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3"
    },
    "url": "https://github.com/villager/Edna-Moda",
    "bugs": {
        "url": "https://github.com/Ecuacion/Pokemon-Showdown-Node-Bot/issues"
    },
    "license": "MIT",
    "private": true
}
